.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.5;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-top: 15rpx;
  border-radius: 50%;
}

.sub-title {
  color: #aaa;
}

.nick-name {
  font-weight: bold;
  color: #38a;
}

.emotion-container {
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  width: 100%;
  height: auto;
  flex-wrap: wrap;
  align-items: center;
}

